<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeStyle">@style/WindowActionMode</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog.Rounded</item>
    </style>

    <style name="AppTheme.TryMe" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary_chiaki</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_chiaki</item>
        <item name="colorAccent">@color/colorAccent_chiaki</item>
        <item name="android:textColorPrimary">@color/colorText_chiaki</item>
    </style>

    <style name="WindowActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">?attr/colorPrimaryDark</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/colorText</item>
    </style>

    <style name="BottomSheetDialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.PopupMenu.Large</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginStart">@dimen/item_margin_default</item>
        <item name="android:layout_marginEnd">@dimen/item_margin_default</item>
        <item name="iconPadding">@dimen/item_padding_double</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="iconTint">@color/colorText</item>
    </style>

    <style name="BottomSheetDialog.Button.Bitmap" parent="BottomSheetDialog.Button">
        <item name="iconTint">@android:color/transparent</item>
        <item name="iconTintMode">add</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="BottomSheetDialog.Rounded" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet.Modal.Rounded</item>
    </style>

    <style name="BottomSheet.Modal.Rounded" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottomsheetdialog</item>
    </style>

</resources>
